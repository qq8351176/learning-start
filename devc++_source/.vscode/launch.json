{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "g++ f5+ctrl 单文件可中文文件名调试运行",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\TestProgram.exe",   //要调试的可执行程序的地址,编译好的程序放在工作目录下
            "args": [],                                         //只有一个.exe文件显得美观，少占用空间
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,                           //终端复用
            "MIMode": "gdb",
            "miDebuggerPath": "D:\\code\\mingw64\\bin\\gdb.exe",        //您的mingw64 gdb.exe目录
            "preLaunchTask": "compile",                                 //和task.json的lable要保持一致
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
        },
    ]
}